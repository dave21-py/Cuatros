<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>


<VBox fx:id="vbox" fx:controller="app.MainWindow" xmlns:fx="http://javafx.com/fxml" stylesheets="@MainWindow.css"
    spacing="20" prefHeight="400" prefWidth="600" alignment="CENTER">


    <VBox alignment="CENTER" spacing="10">
    <Button styleClass="Button" text="Play ▶" prefWidth="200" onAction="#onPlayClicked"/>
    <Button styleClass="Button" text="Tutorial 🎓" prefWidth="200" onAction="#onTutorialClicked"/>
    <Button styleClass="Button" text="Leaderboard 🏆" prefWidth="200" onAction="#onLeaderBoardClicked"/>
    </VBox>

    <Region prefHeight="50"/>

    <HBox alignment="BOTTOM_CENTER" spacing="10" prefWidth="80">
    <VBox alignment="BOTTOM_LEFT" spacing="10" >
    <Button styleClass="Button" text="Help ❔" prefWidth="100" onAction="#onHelpClicked"/>
    <Button styleClass="Button" onAction="#onAboutClicked" text="About 📖" prefWidth="120"/>
    </VBox>
    <Region prefWidth="550"/> 
    <VBox alignment="BOTTOM_RIGHT" spacing="10" >
    <Button styleClass="Button" text="Settings ⚙️" prefWidth="125" onAction="#onSettingsClicked"/>
    </VBox>
    </HBox>

</VBox>
    